                     <cell role="data" rows="1" cols="1">27.00</cell>
                  </row>
                  <row role="data">
                     <cell role="data" rows="1" cols="1">1 flax wheel &amp; check reel</cell>
                     <cell role="data" rows="1" cols="1">3.75</cell>
                  </row>
                  <row role="data">
