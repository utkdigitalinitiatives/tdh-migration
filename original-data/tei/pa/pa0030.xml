                        <cell>at 50 "</cell>
                        <cell rend="right">147 00</cell>
                     </row>
                     <row>
                        <cell>
                           <add place="left" cert="appears to be different ink and hand">422<lb/>302<lb/>
                                    <lb/>120 yds
                                 
                              
                           </add> 
                           <add place="left">
                              <abbr expan="received">recd.</abbr>
                           </add> 
                           <add place="left">missing</add>
                        </cell>
                        <cell>29 do. <orig reg="Ginghams">Ghinghams</orig> 
                           <add place="inline" cert="appears to be different ink and hand">missing</add>
                        </cell>
                        <cell>at 50 "</cell>
                        <cell rend="right">14 50</cell>
                     </row>
                     <row>
                        <cell/>
                        <cell>10 pairs mens Shoes</cell>
                        <cell>at 175 "</cell>
                        <cell rend="right">17 50</cell>
                     </row>
                     <row>
                        <cell/>
                        <cell>6 Common <unclear>Carb</unclear> Bridles</cell>
                        <cell>at 150 "</cell>
                        <cell rend="right">9 00</cell>
                     </row>
                     <row>
                        <cell/>
                        <cell>12 Best plated bitts <unclear>
                              <abbr expan="ditto">do.</abbr>
                           </unclear>
                        </cell>
                        <cell>at 6 $</cell>
                        <cell rend="right">72 00</cell>
                     </row>
                     <row>
                        <cell>
                           <add place="left" cert="appears to be different ink and hand"> 
                              <abbr expan="dozen missing">doz miss.</abbr>
                           </add>
                        </cell>
                        <cell>1 <abbr expan="Dozen">Doze</abbr> best patterns fine <orig reg="Marseilles">Merseilles</orig>
                        </cell>
                        <cell>at 250 <add place="supralinear">
                              <unclear>
                                 <abbr expan="each">eh</abbr>
                              </unclear>
                           </add>
                        </cell>
                        <cell rend="right">30 00</cell>
                     </row>
                     <row>
                        <cell>
                           <add place="left" cert="appears to be different ink and hand">3 <unclear>gr</unclear> 
                              <abbr expan="missing">missg</abbr>
                           </add>
                        </cell>
                        <cell>6 <unclear>Groce</unclear> Buttons</cell>
                        <cell>at 6 $</cell>
                        <cell rend="right">36 00</cell>
                     </row>
                     <row>
                        <cell/>
                        <cell>2 Saddles best</cell>
                        <cell>at 24 $</cell>
                        <cell rend="right">48 00</cell>
                     </row>
                     <row>
                        <cell>
                           <add place="left" cert="appears to be different ink and hand">Missing</add>
                        </cell>
                        <cell> lbs sewing silk</cell>
